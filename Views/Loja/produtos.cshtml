@model List<WebApplication1.Models.Produto>

<style>
    body {
        background: radial-gradient(circle at top, #111 0%, #000 100%);
        color: #fff;
    }

    .titulo-time {
        font-size: 2.2rem;
        text-transform: uppercase;
        background: linear-gradient(90deg, #fff, #aaa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .produto-card {
        background: linear-gradient(145deg, #1b1b1b, #0e0e0e);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.2rem;
        transition: all 0.3s ease;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.05);
    }

    .produto-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 6px 20px rgba(255, 255, 255, 0.1);
        border-color: #999;
    }

    .produto-card img {
        height: 260px;
        object-fit: cover;
        border-radius: 1rem;
    }

    .btn-accent {
        background: linear-gradient(90deg, #fff 0%, #ccc 100%);
        color: #000;
        font-weight: bold;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-accent:hover {
        background: linear-gradient(90deg, #ccc 0%, #fff 100%);
        transform: scale(1.05);
    }
</style>

<section class="container py-5">
    <h2 class="text-center fw-bold mb-5 titulo-time">
        Camisas do <span class="text-accent">@ViewBag.ClubeNome</span>
    </h2>

    @if (Model != null && Model.Count > 0)
    {
        <div class="row g-4 justify-content-center">
            @foreach (var produto in Model)
            {
                <div class="col-6 col-md-4 col-lg-3 d-flex">
                    <div class="produto-card w-100 text-center p-3 d-flex flex-column justify-content-between">
                        <img src="@produto.ImagemUrl" alt="@produto.Nome" class="img-fluid mb-3" />
                        <div>
                            <h5 class="fw-bold">@produto.Nome</h5>
                            <p class="text-muted">@produto.Descricao</p>
                            <p class="fw-bold">@produto.Preco.ToString("C")</p>
                        </div>
                        <button class="btn btn-accent btn-sm mt-3 rounded-pill px-4 py-2 shadow-sm">
                            Comprar
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted mt-5">Nenhum produto dispon√≠vel para este clube.</p>
    }
</section>
