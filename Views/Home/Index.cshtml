@model List<WebApplication1.Models.Liga>

<!-- HERO SECTION -->
<section class="hero d-flex align-items-center justify-content-center text-center text-light">
    <div>
        <h1 class="display-4 fw-bold mb-3">
            <span class="text-accent">VK MANTOS</span>
        </h1>
        <p class="lead mb-4">A elite dos mantos, feito para quem vive o futebol.</p>
        <a href="@Url.Action("Ligas", "Loja")" 
   class="btn btn-accent btn-lg fw-bold px-4 py-2 rounded-pill shadow-sm">
   Ver Ligas
</a>
    </div>
</section>

<!-- LIGAS -->
<section id="ligas" class="container py-5">
    <h2 class="text-center fw-bold mb-4 text-light">
        Escolha sua <span class="text-accent">Liga Favorita</span>
    </h2>

    @if (Model != null && Model.Count > 0)
    {
        <div class="row g-4 justify-content-center">
            @foreach (var liga in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="liga-card text-center p-3 rounded-4 bg-dark text-light border border-secondary-subtle">
                        <img src="@($"~/img/ligas/{liga.Nome.ToLower().Replace(" ", "")}.jpg")" asp-append-version="true"
                             class="img-fluid rounded-3 mb-3 border border-2 border-accent"
                             alt="@liga.Nome" />
                        <h5 class="fw-bold">@liga.Nome</h5>
                        <a href="@Url.Action("Clubes", "Loja", new { ligaId = liga.Id })"
                           class="btn btn-accent btn-sm mt-2 rounded-pill px-3">
                            Ver Clubes
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted">Nenhuma liga dispon√≠vel no momento.</p>
    }
</section>


