@model List<WebApplication1.Models.Liga>

<h1>Bem-vindo à Loja VK MANTOS!</h1>


<!-- Carrossel de Imagens -->
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <!-- Imagem 1 -->
    <div class="carousel-item active">
      <img src="~/img/carrosel/Carrosel1.png" class="d-block w-100" alt="Camisa 1">
      <div class="carousel-caption d-none d-md-block">
        <h5>Camisa Oficial 2025</h5>
        <p>A camisa que você sempre quis, com a melhor qualidade!</p>
      </div>
    </div>
    <!-- Imagem 2 -->
    <div class="carousel-item">
      <img src="~/img/carrosel/Carrosel2.png" class="d-block w-100" alt="Camisa 2">
      <div class="carousel-caption d-none d-md-block">
        <h5>Camisa Treino</h5>
        <p>Design moderno e confortável para o seu dia a dia.</p>
      </div>
    </div>
    <!-- Imagem 3 -->
    <div class="carousel-item">
      <img src="~/img/carrosel/Carrosel3.png" class="d-block w-100" alt="Camisa 3">
      <div class="carousel-caption d-none d-md-block">
        <h5>Camisa Especial</h5>
        <p>Para os fãs mais exigentes!</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<p>Escolha sua liga favorita para começar:</p>

<div class="liga-container">
    @foreach (var liga in Model)
    {
        <div class="liga-card">
            <img src="@($"images/ligas/{liga.Nome.ToLower().Replace(" ", "")}.jpg")" alt="@liga.Nome" />
            <h2><a href="@Url.Action("Clubes", "Loja", new { ligaId = liga.Id })">@liga.Nome</a></h2>
        </div>
    }
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="liga-container">
        @foreach (var liga in Model)
        {
            <div class="liga-card">
                <img src="@($"images/ligas/{liga.Nome.ToLower().Replace(" ", "")}.jpg")" alt="@liga.Nome" />
                <h2><a href="@Url.Action("Clubes", "Loja", new { ligaId = liga.Id })">@liga.Nome</a></h2>
            </div>
        }
    </div>
}
else
{
    <p>Nenhuma liga disponível no momento.</p>
}
